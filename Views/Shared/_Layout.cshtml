<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="custom-hamburger">
                <span class="line line1"></span>
                <span class="line line2"></span>
                <span class="line line3"></span>
            </div>
        </div>

        <div class="quick-scroll">
            <div class="scroll-label">
                <span>Quick</span><br />
                <span>Scroll</span>
            </div>
            <div class="scroll-dots">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>
        </div>
    </div>

    <header class="header">
        <div class="logo">BE.</div>
        <nav class="nav-links">
            <a href="#">HOME</a>
            <a href="#">SHOP</a>
            <a href="#">ABOUT US</a>
            <a href="#">CONTACT</a>
        </nav>
        <div class="nav-icons">
            @Html.Partial("_LoginPartial")
            <i class="fa fa-shopping-cart"></i>
            <i class="fa fa-search"></i>
        </div>
    </header>

    <!-- Render main content -->
    <main style="margin-left: 80px;">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted" style="margin-left: 80px;">
        <div class="container">
            &copy; 2025 - BE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sections = document.querySelectorAll("section");
            const scrollDotsContainer = document.querySelector(".scroll-dots");

            // Clear existing static dots (optional, safe reset)
            scrollDotsContainer.innerHTML = "";

            // Create a dot for each section and link to it
            sections.forEach((section, index) => {
                const dot = document.createElement("div");
                dot.classList.add("dot");

                // Optional: Add click scroll behavior
                dot.addEventListener("click", () => {
                    section.scrollIntoView({ behavior: "smooth", block: "start" });
                });

                scrollDotsContainer.appendChild(dot);
            });
        });
    </script>
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const track = document.querySelector(".carousel-track");
        const prev = document.querySelector(".carousel-nav.prev");
        const next = document.querySelector(".carousel-nav.next");
        const cards = document.querySelectorAll(".carousel-card");
        const cardWidth = cards[0].offsetWidth + 32; // 32px = gap

        let position = 0;

        prev.addEventListener("click", () => {
            if (position > 0) {
                position--;
                track.style.transform = `translateX(-${cardWidth * position}px)`;
            }
        });

        next.addEventListener("click", () => {
            if (position < cards.length - 4) {
                position++;
                track.style.transform = `translateX(-${cardWidth * position}px)`;
            }
        });
    });
</script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
