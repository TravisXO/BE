<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/about.css" />
    <link rel="stylesheet" href="~/css/contact.css" />
    <link rel="stylesheet" href="~/css/shop.css" />
    <link rel="stylesheet" href="~/css/detail.css" />
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="custom-hamburger">
                <span class="line line1"></span>
                <span class="line line2"></span>
                <span class="line line3"></span>
            </div>
        </div>

        <div class="quick-scroll">
            <div class="scroll-label">
                <span>Quick</span><br />
                <span>Scroll</span>
            </div>
            <div class="scroll-dots">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>
        </div>
    </div>

    <header class="header">
        <div class="logo">BE.</div>
        <nav class="nav-links">
            <a asp-controller="Home" asp-action="Index">HOME</a>
            <a asp-controller="Shop" asp-action="Shop">SHOP</a>
            <a asp-controller="Home" asp-action="About">ABOUT US</a>
            <a asp-controller="Home" asp-action="Contact">CONTACT</a>
        </nav>
        <div class="nav-icons">
            @Html.Partial("_LoginPartial")
            <i class="fa fa-shopping-cart"></i>
            <i class="fa fa-search"></i>
        </div>
    </header>

    <!-- Render main content -->
    <main style="margin-left: 80px;">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted" style="margin-left: 80px;">
        <div class="footer-main">
            <div class="container">
                <div class="footer-content">
                    <!-- Column 1: Logo and Contact Info -->
                    <div class="footer-column">
                        <div class="footer-logo">
                            <h2 class="logo">BE.</h2>
                        </div>
                        <div class="contact-info">
                            <div class="contact-item">
                                <i class="contact-icon email-icon"></i>
                                <span>contact@be.theone.com</span>
                            </div>
                            <div class="contact-item">
                                <i class="contact-icon phone-icon"></i>
                                <span>+260 xxxx xxx xx</span>
                            </div>
                            <div class="contact-item">
                                <i class="contact-icon website-icon"></i>
                                <span>www.be.com</span>
                            </div>
                        </div>
                    </div>

                    <!-- Column 2: Quick Links -->
                    <div class="footer-column">
                        <h3 class="footer-heading">QUICK LINKS</h3>
                        <ul class="footer-links">
                            <li><a href="#">Our Services</a></li>
                            <li><a href="#">Portfolio</a></li>
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">Contact</a></li>
                        </ul>
                    </div>

                    <!-- Column 3: Explore -->
                    <div class="footer-column">
                        <h3 class="footer-heading">EXPLORE</h3>
                        <ul class="footer-links">
                            <li><a href="#">Our Story</a></li>
                            <li><a href="#">Testimonials</a></li>
                            <li><a href="#">Blog</a></li>
                            <li><a href="#">Careers</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Social Media Banner -->
                <div class="social-banner">
                    <a href="#" class="social-icon facebook"></a>
                    <a href="#" class="social-icon whatsapp"></a>
                    <a href="#" class="social-icon instagram"></a>
                    <a href="#" class="social-icon twitter"></a>
                    <a href="#" class="social-icon website"></a>
                </div>
            </div>
        </div>

        <!-- Copyright Bar -->
        <div class="copyright-bar">
            <div class="container">
                <div class="copyright-content">
                    <p>&copy; 2025 - BE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
                    <p class="parent-company">by bnopmedia.com</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sections = document.querySelectorAll("section");
            const scrollDotsContainer = document.querySelector(".scroll-dots");

            // Clear existing static dots (optional, safe reset)
            scrollDotsContainer.innerHTML = "";

            // Create a dot for each section and link to it
            sections.forEach((section, index) => {
                const dot = document.createElement("div");
                dot.classList.add("dot");

                // Optional: Add click scroll behavior
                dot.addEventListener("click", () => {
                    section.scrollIntoView({ behavior: "smooth", block: "start" });
                });

                scrollDotsContainer.appendChild(dot);
            });
        });
    </script>
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const track = document.querySelector(".carousel-track");
        const prev = document.querySelector(".carousel-nav.prev");
        const next = document.querySelector(".carousel-nav.next");
        const cards = document.querySelectorAll(".carousel-card");
        const cardWidth = cards[0].offsetWidth + 32; // 32px = gap

        let position = 0;

        prev.addEventListener("click", () => {
            if (position > 0) {
                position--;
                track.style.transform = `translateX(-${cardWidth * position}px)`;
            }
        });

        next.addEventListener("click", () => {
            if (position < cards.length - 4) {
                position++;
                track.style.transform = `translateX(-${cardWidth * position}px)`;
            }
        });
    });
</script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
