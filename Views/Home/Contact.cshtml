<!-- Contact Form Section -->
<section id="contactForm">
    <div class="row">
        <!-- Left Column - Contact Info -->
        <div class="col-lg-5">
            <div class="contact-info" style="
                background-color: #FFA600;
                padding: 40px;
                height: 100%;
                border-radius: 8px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);">
                <h2 style="
                    font-size: 2.5rem;
                    margin-bottom: 30px;
                    position: relative;
                    display: inline-block;
                ">
                    Get In Touch
                    <span style="
                        content: '';
                        position: absolute;
                        bottom: -10px;
                        left: 0;
                        width: 50px;
                        height: 3px;
                        background-color: #FF6A00;
                        display: block;
                    "></span>
                </h2>

                <p><strong>Address:</strong><br>[Your Company Address Line 1]<br>[Address Line 2, City, Postal Code]<br>[Country]</p>
                <p><strong>Phone:</strong> <a href="#" style="color: #2b2b2b; text-decoration: none;">[Your Phone Number]</a></p>
                <p><strong>Email:</strong> <a href="#" style="color: #2b2b2b; text-decoration: none;">[Your Email Address]</a></p>
                <p><strong>Website:</strong> <a href="http://www.be.com" target="_blank" style="color: #2b2b2b; text-decoration: none;">www.be.com</a></p>
                <p><strong>Social:</strong> Follow us <a href="https://instagram.com/be.theone" target="_blank" style="color: #2b2b2b; text-decoration: none;">be.theone</a></p>
            </div>
        </div>

            <!-- Right Column - Contact Forms -->
            <div class="col-lg-7">
                <div class="contact-form">
                    <!-- Form Selection Tabs -->
                    <div class="form-selection">
                        <div class="form-tab active" data-form="contact-us">Contact Us</div>
                        <div class="form-tab" data-form="quick-quote">Get a Quick Quote</div>
                    </div>

                    <!-- Regular Contact Form -->
                    <div id="contact-us-form" class="form-container active">
                        <h2>Send Us a Message</h2>
                        <form>
                            <div class="form-group">
                                <label>Name <span style="color: #FF6A00;">*</span></label>
                                <input type="text" class="form-control" placeholder="Your name" required />
                            </div>

                            <div class="form-group">
                                <label>Email <span style="color: #FF6A00;">*</span></label>
                                <input type="email" class="form-control" placeholder="your@email.com" required />
                            </div>

                            <div class="form-group">
                                <label>Subject</label>
                                <input type="text" class="form-control" placeholder="Optional" />
                            </div>

                            <div class="form-group">
                                <label>Message <span style="color: #FF6A00;">*</span></label>
                                <textarea class="form-control" placeholder="Write your message here..." required></textarea>
                            </div>

                            <button type="submit" class="btn-submit">Send Message</button>
                        </form>
                    </div>

                    <!-- Quick Quote Form - Step 1 -->
                    <div id="quick-quote-form-step1" class="form-container form-step">
                        <h2>Request a Quick Quote</h2>
                        <form>
                            <div class="form-group">
                                <label>Name <span style="color: #FF6A00;">*</span></label>
                                <input type="text" class="form-control" placeholder="Your name" required />
                            </div>

                            <div class="form-group">
                                <label>Email <span style="color: #FF6A00;">*</span></label>
                                <input type="email" class="form-control" placeholder="your@email.com" required />
                            </div>

                            <div class="form-group">
                                <label>Contact Number <span style="color: #FF6A00;">*</span></label>
                                <input type="tel" class="form-control" placeholder="+260-..." required />
                            </div>

                            <div class="form-group">
                                <label>Are you looking to buy Branded or Unbranded items? <span style="color: #FF6A00;">*</span></label>
                                <div class="radio-group">
                                    <div class="radio-option">
                                        <input type="radio" id="branded" name="item-type" value="branded" required />
                                        <label for="branded">Branded</label>
                                    </div>
                                    <div class="radio-option">
                                        <input type="radio" id="unbranded" name="item-type" value="unbranded" />
                                        <label for="unbranded">Unbranded</label>
                                    </div>
                                    <div class="radio-option">
                                        <input type="radio" id="both" name="item-type" value="both" />
                                        <label for="both">Both</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Are you an existing customer? <span style="color: #FF6A00;">*</span></label>
                                <div class="radio-group">
                                    <div class="radio-option">
                                        <input type="radio" id="existing-yes" name="existing-customer" value="yes" required />
                                        <label for="existing-yes">Yes</label>
                                    </div>
                                    <div class="radio-option">
                                        <input type="radio" id="existing-no" name="existing-customer" value="no" />
                                        <label for="existing-no">No</label>
                                    </div>
                                </div>
                            </div>

                            <button type="button" class="btn-submit" id="next-step-btn">Next</button>
                        </form>
                    </div>

                    <!-- Quick Quote Form - Step 2 -->
                    <div id="quick-quote-form-step2" class="form-container form-step">
                        <h2>Request a Quick Quote</h2>
                        <form>
                            <div class="form-group">
                                <label>Which products are you interested in? <span style="color: #FF6A00;">*</span></label>
                                <textarea class="form-control" placeholder="Please describe the products you're looking for..." required></textarea>
                            </div>

                            <div class="form-group">
                                <label>How many items? <span style="color: #FF6A00;">*</span></label>
                                <input type="number" class="form-control" placeholder="Enter quantity" required min="1" />
                            </div>

                            <div class="form-group">
                                <label>When do you need them? <span style="color: #FF6A00;">*</span></label>
                                <input type="date" class="form-control" required />
                            </div>

                            <div class="form-group">
                                <label>Upload file (optional, Max 50MB)</label>
                                <div class="file-upload">
                                    <div class="file-upload-btn">
                                        <i class="fa fa-upload"></i> Choose File
                                    </div>
                                    <input type="file" id="file-upload-input" />
                                </div>
                                <div class="file-name" id="file-name">No file selected</div>
                            </div>

                            <div style="display: flex;">
                                <button type="button" class="back-button" id="back-to-step1">Back</button>
                                <button type="submit" class="btn-submit">Send Quote</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</section>
<script>
    // Form switching functionality
           document.addEventListener('DOMContentLoaded', function() {
               // Get form tabs and containers
               const formTabs = document.querySelectorAll('.form-tab');
               const contactForm = document.getElementById('contact-us-form');
               const quoteFormStep1 = document.getElementById('quick-quote-form-step1');
               const quoteFormStep2 = document.getElementById('quick-quote-form-step2');

               // Tab click event listeners
               formTabs.forEach(tab => {
                   tab.addEventListener('click', function() {
                       // Remove active class from all tabs
                       formTabs.forEach(t => t.classList.remove('active'));
                       // Add active class to clicked tab
                       this.classList.add('active');

                       // Show the appropriate form
                       const formType = this.getAttribute('data-form');
                       if (formType === 'contact-us') {
                           contactForm.classList.add('active');
                           quoteFormStep1.classList.remove('active');
                           quoteFormStep2.classList.remove('active');
                       } else if (formType === 'quick-quote') {
                           contactForm.classList.remove('active');
                           quoteFormStep1.classList.add('active');
                           quoteFormStep2.classList.remove('active');
                       }
                   });
               });

               // Next button functionality
               const nextStepBtn = document.getElementById('next-step-btn');
               nextStepBtn.addEventListener('click', function() {
                   quoteFormStep1.classList.remove('active');
                   quoteFormStep2.classList.add('active');
               });

               // Back button functionality
               const backButton = document.getElementById('back-to-step1');
               backButton.addEventListener('click', function() {
                   quoteFormStep2.classList.remove('active');
                   quoteFormStep1.classList.add('active');
               });

               // File upload functionality
               const fileInput = document.getElementById('file-upload-input');
               const fileName = document.getElementById('file-name');

               fileInput.addEventListener('change', function() {
                   if (this.files && this.files[0]) {
                       fileName.textContent = this.files[0].name;
                   } else {
                       fileName.textContent = 'No file selected';
                   }
               });
           });
</script>
       
