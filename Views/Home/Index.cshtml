@section Scripts {
    <script>
        const videoSources = [
            "/videos/home/greek-marvel-1.mp4",
            "/videos/home/greek-marvel-2.mp4",
            "/videos/home/greek-marvel-3.mp4",
            "/videos/home/greek-marvel-4.mp4"
        ];

        let index = 0;
        let current = document.getElementById("video1");
        let next = document.getElementById("video2");

        function playNextVideo() {
            index = (index + 1) % videoSources.length;

            // Update next video source cleanly
            const source = next.querySelector("source");
            source.setAttribute("src", videoSources[index]);
            next.load();

            next.oncanplaythrough = () => {
                next.play();

                current.style.opacity = 0;
                next.style.opacity = 1;

                // Swap refs
                const temp = current;
                current = next;
                next = temp;
            };
        }

        // Attach listener to both video elements
        current.addEventListener("ended", playNextVideo);
        next.addEventListener("ended", playNextVideo);
    </script>
}

