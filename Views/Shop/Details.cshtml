@model BE.Models.ProductDetail

<section style="padding: 4rem 2rem;">
    <div>
        <a href="/Shop" style="text-decoration:none; color:#FFA600;">&laquo; Back to Shop</a>
    </div>

    <div style="display: flex; gap: 2rem; flex-wrap: wrap; margin-top: 2rem;">
        <!-- Gallery -->
        <div style="flex: 1;">
            <img src="@Model.GalleryImageUrls?.FirstOrDefault()" alt="@Model.Name" style="width:100%; border-radius: 1rem;" />
        </div>

        <!-- Product Info -->
        <div style="flex: 1;">
            <h2 style="font-family: 'Playfair Display'; font-size: 2rem; color: #2B2B2B;">@Model.Name</h2>
            <p style="font-size: 1.5rem; color: #FF6A00; margin-top: 1rem;">@Model.Price</p>

            <ul style="margin-top: 1rem;">
                @foreach (var bullet in Model.ShortDescriptionBullets)
                {
                    <li>@bullet</li>
                }
            </ul>

            <div style="margin-top: 1.5rem;">
                <strong>SKU:</strong> @Model.Sku<br />
                <strong>Category:</strong> @string.Join(", ", Model.Categories ?? new List<string>())
            </div>

            <button style="margin-top: 2rem; padding: 0.75rem 2rem; background-color: #FFA600; color: white; border: none; border-radius: 2rem; font-weight: bold;">
                🛒 Add to Cart
            </button>
        </div>
    </div>
</section>
