@page
@model RegisterModel
@{
    ViewData["Title"] = "Join BE.";
}

<section style="min-height: 100vh; background-color: #EEEBE3; font-family: 'Inter', sans-serif; position: relative; overflow: hidden;">
    <!-- Background Elements -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1; overflow: hidden;">
        <!-- David Sculpture Image -->
        <div style="position: absolute; top: 0; right: 0; width: 50%; height: 100%; overflow: hidden;">
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/images/register/register-marble.webp'); background-size: cover; background-position: center; filter: grayscale(40%) contrast(110%);"></div>
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(90deg, #EEEBE3 0%, rgba(238, 235, 227, 0.7) 20%, rgba(238, 235, 227, 0) 50%);"></div>
        </div>

        <!-- Decorative Elements -->
        <div style="position: absolute; bottom: -5%; left: -5%; width: 40%; height: 40%; border-radius: 50%; background-color: #FF6A00; opacity: 0.08;"></div>
        <div style="position: absolute; top: -10%; right: 30%; width: 25%; height: 25%; border-radius: 50%; background-color: #2B2B2B; opacity: 0.05;"></div>
    </div>

    <!-- Content Container -->
    <div class="container-fluid" style="position: relative; z-index: 2; height: 100vh; display: flex; align-items: center; justify-content: center;">
        <div style="width: 85%; max-width: 1200px; display: flex; flex-direction: row; box-shadow: 0 25px 50px -12px rgba(43, 43, 43, 0.1); border-radius: 12px; overflow: hidden; position: relative; min-height: 600px;">

            <!-- Left Column - Form Area -->
            <div style="flex: 1; background-color: white; padding: 3rem; display: flex; flex-direction: column; justify-content: center; position: relative;">
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background-color: #FF6A00;"></div>

                <div style="margin-bottom: 2.5rem;">
                    <h2 style="font-family: 'Playfair Display', serif; color: #2B2B2B; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">Join BE.</h2>
                    <p style="color: #666; margin-bottom: 2rem;">Create your account and start your branding journey</p>
                </div>

                <!-- Selection Buttons -->
                <div id="selectionButtons" class="text-center" style="position: relative;">
                    <button class="btn btn-outline-secondary w-100 mb-3 d-flex align-items-center justify-content-center"
                            onclick="location.href='@Url.Page("./ExternalLogin", new { provider = "Google", returnUrl = Model.ReturnUrl })'"
                            style="max-width: 100%; background-color: white; color: #2B2B2B; border: 1px solid #ddd; padding: 12px; border-radius: 8px; transition: all 0.3s ease; font-weight: 500;">
                        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo" style="width:20px; height:20px; margin-right:10px;">
                        Sign up with Google
                    </button>

                    <div style="display: flex; align-items: center; margin: 1.5rem 0;">
                        <div style="flex-grow: 1; height: 1px; background-color: #ddd;"></div>
                        <div style="margin: 0 1rem; color: #888; font-size: 0.9rem;">or</div>
                        <div style="flex-grow: 1; height: 1px; background-color: #ddd;"></div>
                    </div>

                    <button class="btn"
                            style="width: 100%; background-color: #FF6A00; color: white; padding: 12px; border-radius: 8px; transition: all 0.3s ease; font-weight: 600; border: none; box-shadow: 0 4px 6px rgba(255, 106, 0, 0.1);"
                            onclick="toggleToEmail()">
                        <i class="fa fa-envelope me-2"></i>Sign up with Email
                    </button>
                </div>

                <!-- Email Form -->
                <div id="emailForm" class="d-none" style="width: 100%; position: relative;">
                    <div style="display: flex; align-items: center; margin-bottom: 1.5rem;">
                        <button onclick="toggleToGoogle()" style="background: transparent; color: #2B2B2B; border: none; display: flex; align-items: center; font-size: 0.9rem; padding: 0; margin-right: 1rem;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 0.5rem;"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
                            Back
                        </button>
                        <h3 style="font-family: 'Inter', sans-serif; color: #2B2B2B; font-size: 1.25rem; font-weight: 600; margin: 0;">Sign up with Email</h3>
                    </div>

                    <form method="post" class="needs-validation">
                        <div style="margin-bottom: 1.5rem;">
                            <label for="emailInput" style="display: block; margin-bottom: 0.5rem; color: #555; font-size: 0.9rem; font-weight: 500;">Email</label>
                            <input asp-for="Input.Email" class="form-control" id="emailInput" placeholder="you@example.com"
                                   style="width: 100%; padding: 12px 16px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; transition: all 0.3s ease;" />
                            <span asp-validation-for="Input.Email" class="text-danger" style="display: block; margin-top: 0.5rem; font-size: 0.85rem;"></span>
                        </div>

                        <div style="margin-bottom: 1.5rem;">
                            <label for="passwordInput" style="display: block; margin-bottom: 0.5rem; color: #555; font-size: 0.9rem; font-weight: 500;">Password</label>
                            <input asp-for="Input.Password" class="form-control" id="passwordInput" placeholder="Create a secure password"
                                   style="width: 100%; padding: 12px 16px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; transition: all 0.3s ease;" />
                            <span asp-validation-for="Input.Password" class="text-danger" style="display: block; margin-top: 0.5rem; font-size: 0.85rem;"></span>
                        </div>

                        <div style="margin-bottom: 2rem;">
                            <label for="confirmPasswordInput" style="display: block; margin-bottom: 0.5rem; color: #555; font-size: 0.9rem; font-weight: 500;">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" id="confirmPasswordInput" placeholder="Confirm your password"
                                   style="width: 100%; padding: 12px 16px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; transition: all 0.3s ease;" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="display: block; margin-top: 0.5rem; font-size: 0.85rem;"></span>
                        </div>

                        <button type="submit" class="btn w-100"
                                style="background-color: #FF6A00; color: white; border-radius: 8px; padding: 14px; font-weight: 600; border: none; box-shadow: 0 4px 6px rgba(255, 106, 0, 0.1); transition: all 0.3s ease;">
                            Create Account
                        </button>
                    </form>
                </div>

                <!-- Already have an account -->
                <div style="margin-top: 2rem; text-align: center; color: #777; font-size: 0.95rem;">
                    Already have an account? <a href="/Identity/Account/Login" style="color: #FF6A00; text-decoration: none; font-weight: 600;">Log in</a>
                </div>
            </div>

            <!-- Right Column - Brand Messaging -->
            <div style="flex: 0.6; background-color: #2B2B2B; padding: 3rem; display: flex; flex-direction: column; justify-content: center; align-items: flex-start; position: relative; overflow: hidden;">
                <!-- Orange accent -->
                <div style="position: absolute; top: 3rem; right: 3rem; width: 10px; height: 10px; border-radius: 50%; background-color: #FF6A00;"></div>
                <div style="position: absolute; bottom: 3rem; left: 3rem; width: 50px; height: 4px; background-color: #FF6A00;"></div>

                <div style="position: relative; z-index: 2; max-width: 90%;">
                    <div style="margin-bottom: 1.5rem;">
                        <h2 style="font-family: 'Playfair Display', serif; color: white; font-size: 3rem; line-height: 1.1; margin-bottom: 1.5rem; position: relative;">
                            BE<span style="color: #FF6A00;">.</span>
                        </h2>
                    </div>
                    <p style="color: rgba(255,255,255,0.9); font-size: 1.25rem; margin-bottom: 2rem; line-height: 1.6;">Your creative and reliable partner in modern branding.</p>
                    <p style="color: rgba(255,255,255,0.7); font-weight: 500; font-size: 0.95rem;">– The BE. Team</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleToEmail() {
            document.getElementById("selectionButtons").classList.add("d-none");
            document.getElementById("emailForm").classList.remove("d-none");
        }

        function toggleToGoogle() {
            document.getElementById("emailForm").classList.add("d-none");
            document.getElementById("selectionButtons").classList.remove("d-none");
        }

        // Focus states for inputs
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.style.borderColor = '#FF6A00';
                this.style.boxShadow = '0 0 0 3px rgba(255, 106, 0, 0.1)';
            });

            input.addEventListener('blur', function() {
                this.style.borderColor = '#ddd';
                this.style.boxShadow = 'none';
            });
        });

        // Button hover effects
        document.querySelectorAll('.btn').forEach(button => {
            button.addEventListener('mouseenter', function() {
                if (this.style.backgroundColor === 'rgb(255, 106, 0)') {
                    this.style.backgroundColor = '#e55f00';
                } else if (this.style.backgroundColor === 'white') {
                    this.style.backgroundColor = '#f8f8f8';
                }
            });

            button.addEventListener('mouseleave', function() {
                if (this.style.backgroundColor === 'rgb(229, 95, 0)') {
                    this.style.backgroundColor = '#FF6A00';
                } else if (this.style.backgroundColor === 'rgb(248, 248, 248)') {
                    this.style.backgroundColor = 'white';
                }
            });
        });
    </script>
}