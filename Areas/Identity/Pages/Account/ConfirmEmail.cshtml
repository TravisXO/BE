@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<section style="min-height: 100vh; background-color: #2B2B2B; font-family: 'Inter', sans-serif; position: relative; overflow: hidden; display: flex; align-items: center; justify-content: center;">
    <!-- Background Elements -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1; overflow: hidden;">
        <!-- Marble Image -->
        <div style="position: absolute; bottom: 0; right: 0; width: 60%; height: 100%; overflow: hidden;">
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/images/confirm-email-marble.webp'); background-size: cover; background-position: center; filter: brightness(0.8) contrast(1.1);"></div>
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, #2B2B2B 0%, rgba(43, 43, 43, 0.8) 40%, rgba(43, 43, 43, 0) 70%);"></div>
        </div>

        <!-- Decorative Elements -->
        <div style="position: absolute; top: 15%; right: 20%; width: 30%; height: 30%; border-radius: 50%; background-color: #FF6A00; opacity: 0.05;"></div>
        <div style="position: absolute; bottom: 10%; left: 10%; width: 20%; height: 20%; border-radius: 50%; background-color: #EEEBE3; opacity: 0.05;"></div>
    </div>

    <!-- Content Card -->
    <div style="position: relative; z-index: 2; width: 90%; max-width: 540px; background-color: #EEEBE3; border-radius: 12px; overflow: hidden; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: linear-gradient(90deg, #FF6A00, rgba(255, 106, 0, 0.7));"></div>

        <div style="padding: 3rem;">
            <div style="text-align: center; margin-bottom: 2.5rem;">
                <div style="width: 80px; height: 80px; background-color: rgba(255, 106, 0, 0.15); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#FF6A00" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                </div>
                <h1 style="font-family: 'Playfair Display', serif; color: #2B2B2B; font-size: 2.5rem; margin-bottom: 1rem;">@ViewData["Title"]</h1>
                <p style="color: #666; font-size: 1.1rem; max-width: 400px; margin: 0 auto;">Thank you for confirming your email address. Your account is now fully activated.</p>
            </div>

            <div style="padding: 1.5rem; background-color: white; border-radius: 8px; margin-bottom: 2rem;">
                <partial name="_StatusMessage" model="Model.StatusMessage" />
            </div>

            <div style="text-align: center;">
                <a href="/Identity/Account/Login" style="display: inline-block; padding: 14px 28px; background-color: #FF6A00; color: white; text-decoration: none; border-radius: 8px; font-weight: 600; transition: all 0.3s ease; box-shadow: 0 4px 6px rgba(255, 106, 0, 0.15);">
                    Continue to Login
                </a>
            </div>
        </div>
    </div>
</section>

<script>
    // Button hover effect
    document.querySelector('a[href="/Identity/Account/Login"]').addEventListener('mouseenter', function() {
        this.style.backgroundColor = '#e55f00';
        this.style.transform = 'translateY(-2px)';
    });

    document.querySelector('a[href="/Identity/Account/Login"]').addEventListener('mouseleave', function() {
        this.style.backgroundColor = '#FF6A00';
        this.style.transform = 'translateY(0)';
    });
</script>