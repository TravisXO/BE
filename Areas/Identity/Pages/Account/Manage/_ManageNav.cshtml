@inject SignInManager<BEUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills flex-column" style="font-family: 'Inter', sans-serif; padding-left: 0; list-style: none;">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" asp-page="./Index"
           style='@(ManageNavPages.IndexNavClass(ViewContext) == "active"
                    ? "background-color: #FF6A00; color: #fff; font-weight: 600; border-left: none;"
                    : "color: #2B2B2B; background-color: transparent; font-weight: 500; border-left: none;")
                  + " display: block; padding: 0.6rem 1rem; border-radius: 8px; text-decoration: none; transition: background-color 0.3s;"'>
            Profile
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" asp-page="./Email"
           style='@(ManageNavPages.EmailNavClass(ViewContext) == "active"
                    ? "background-color: #FF6A00; color: #fff; font-weight: 600; border-left: none;"
                    : "color: #2B2B2B; background-color: transparent; font-weight: 500; border-left: none;")
                  + " display: block; padding: 0.6rem 1rem; border-radius: 8px; text-decoration: none; transition: background-color 0.3s;"'>
            Email
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.SetPasswordNavClass(ViewContext)" asp-page="./SetPassword"
           style='@(ManageNavPages.SetPasswordNavClass(ViewContext) == "active"
                    ? "background-color: #FF6A00; color: #fff; font-weight: 600; border-left: none;"
                    : "color: #2B2B2B; background-color: transparent; font-weight: 500; border-left: none;")
                  + " display: block; padding: 0.6rem 1rem; border-radius: 8px; text-decoration: none; transition: background-color 0.3s;"'>
            Set password
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins"
               style='@(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active"
                        ? "background-color: #FF6A00; color: #fff; font-weight: 600; border-left: none;"
                        : "color: #2B2B2B; background-color: transparent; font-weight: 500; border-left: none;")
                      + " display: block; padding: 0.6rem 1rem; border-radius: 8px; text-decoration: none; transition: background-color 0.3s;"'>
                External logins
            </a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" asp-page="./PersonalData"
           style='@(ManageNavPages.PersonalDataNavClass(ViewContext) == "active"
                    ? "background-color: #FF6A00; color: #fff; font-weight: 600; border-left: none;"
                    : "color: #2B2B2B; background-color: transparent; font-weight: 500; border-left: none;")
                  + " display: block; padding: 0.6rem 1rem; border-radius: 8px; text-decoration: none; transition: background-color 0.3s;"'>
            Personal data
        </a>
    </li>
</ul>
