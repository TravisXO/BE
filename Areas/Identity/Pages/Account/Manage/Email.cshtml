@page
@model EmailModel
@{
    ViewData["Title"] = "Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
    var brandOrange = "#FF6A00";
    var brandCharcoal = "#2B2B2B";
    var fontHeading = "'Playfair Display', serif";
    var fontBody = "'Inter', sans-serif";
    var inputBg = "#FFFFFF";
    var inputBorder = brandCharcoal;
    var dangerColor = "#dc3545";
    var successColor = "#28a745";
}

<div style="padding: 2rem 4rem; font-family: @fontBody;">
    <h2 style="font-family: @fontHeading; font-size: 1.75rem; color: @brandCharcoal; border-bottom: 3px solid @brandOrange; padding-bottom: 0.5rem; margin-bottom: 2rem;">Manage Email</h2>

    <div style="background-color: white; border-radius: 12px; padding: 2rem 2.5rem; max-width: 600px; box-shadow: 0 12px 24px rgba(0,0,0,0.06);">
        <form id="email-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert" style="color: @dangerColor; margin-bottom: 1rem;"></div>

            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label" style="color: @brandCharcoal; font-weight: 500;">Current Email</label>
                <div style="display: flex; align-items: center;">
                    <input asp-for="Email" class="form-control" disabled
                           style="flex: 1; font-family: @fontBody; background-color: #f5f5f5; border: 1px solid @inputBorder; color: @brandCharcoal; padding: 0.75rem; border-radius: 6px; opacity: 0.85;" />
                    @if (Model.IsEmailConfirmed)
                    {
                        <span class="text-success" style="margin-left: 10px; font-size: 1.2rem; color: @successColor;">&#10003;</span>
                    }
                </div>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Input.NewEmail" class="form-label" style="color: @brandCharcoal; font-weight: 500;">New Email</label>
                <input asp-for="Input.NewEmail" class="form-control" placeholder="New Email"
                       style="font-family: @fontBody; background-color: @inputBg; border: 1px solid @inputBorder; color: @brandCharcoal; padding: 0.75rem; border-radius: 6px;" />
                <span asp-validation-for="Input.NewEmail" class="text-danger" style="color: @dangerColor; font-size: 0.875em; display: block; margin-top: 0.25rem;"></span>
            </div>

            <button id="change-email-button" type="submit" class="btn btn-lg btn-primary"
                    style="background-color: @brandOrange; color: white; font-family: @fontBody; font-weight: 600; border: none; padding: 0.75rem 1.5rem; border-radius: 6px; width: 100%;">
                Change email
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
