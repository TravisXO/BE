@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var brandOrange = "#FF6A00";
    var brandBeige = "#EEEBE3";
    var brandCharcoal = "#2B2B2B";
    var fontHeading = "'Playfair Display', serif";
    var fontBody = "'Inter', sans-serif";
    var inputBg = "#FFFFFF";
    var inputBorder = brandCharcoal;
    var disabledBg = "#F5F5F5";
    var dangerColor = "#dc3545";
}

<div style="padding: 2rem 4rem; font-family: @fontBody;">
    <h2 style="font-family: @fontHeading; font-size: 1.75rem; color: @brandCharcoal; border-bottom: 3px solid @brandOrange; padding-bottom: 0.5rem; margin-bottom: 2rem;">Profile</h2>

    <div style="background-color: white; border-radius: 12px; padding: 2rem 2.5rem; max-width: 600px; box-shadow: 0 12px 24px rgba(0,0,0,0.06);">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert" style="color: @dangerColor; font-family: @fontBody; margin-bottom: 1rem;"></div>

            <div class="form-group mb-4">
                <label asp-for="Username" class="form-label" style="color: @brandCharcoal; font-weight: 500;">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Username" disabled
                       style="font-family: @fontBody; background-color: @disabledBg; border: 1px solid @inputBorder; color: @brandCharcoal; padding: 0.75rem; border-radius: 6px; opacity: 0.7;" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Input.PhoneNumber" class="form-label" style="color: @brandCharcoal; font-weight: 500;">Phone Number</label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number"
                       style="font-family: @fontBody; background-color: @inputBg; border: 1px solid @inputBorder; color: @brandCharcoal; padding: 0.75rem; border-radius: 6px;" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger" style="color: @dangerColor; font-size: 0.875em; display: block; margin-top: 0.25rem;"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-lg btn-primary"
                    style="background-color: @brandOrange; color: white; font-family: @fontBody; font-weight: 600; border: none; padding: 0.75rem 1.5rem; border-radius: 6px; width: 100%;">
                Save changes
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
