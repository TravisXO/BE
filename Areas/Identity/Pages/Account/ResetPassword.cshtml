@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<section style="min-height: 100vh; background-color: #EEEBE3; font-family: 'Inter', sans-serif; position: relative; overflow: hidden; display: flex; align-items: center; justify-content: center;">
    <!-- Background Elements -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1;">
        <!-- Left Side Background -->
        <div style="position: absolute; top: 0; left: 0; height: 100%; width: 65%; overflow: hidden;">
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/images/reset-password-marble.webp'); background-size: cover; background-position: center; filter: saturate(0.9);"></div>
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(-90deg, rgba(238, 235, 227, 1) 30%, rgba(238, 235, 227, 0.8) 60%, rgba(238, 235, 227, 0.5) 100%);"></div>
        </div>

        <!-- Decorative Elements -->
        <div style="position: absolute; top: -10%; right: 5%; width: 30%; height: 30%; border-radius: 50%; background-color: #FF6A00; opacity: 0.05;"></div>
        <div style="position: absolute; bottom: 15%; left: 10%; width: 25%; height: 25%; border-radius: 50%; background-color: #2B2B2B; opacity: 0.03;"></div>
    </div>

    <!-- Content -->
    <div class="container" style="position: relative; z-index: 2; width: 100%; max-width: 1140px; padding: 0 2rem;">
        <div style="display: flex; justify-content: flex-end;">
            <div style="width: 100%; max-width: 480px; background-color: white; border-radius: 12px; overflow: hidden; box-shadow: 0 20px 40px rgba(43, 43, 43, 0.1);">
                <div style="height: 6px; background: linear-gradient(90deg, #FF6A00, rgba(255, 106, 0, 0.7));"></div>

                <div style="padding: 3rem;">
                    <h1 style="font-family: 'Playfair Display', serif; color: #2B2B2B; font-size: 2.5rem; margin-bottom: 0.25rem;">@ViewData["Title"]</h1>
                    <h2 style="color: #666; font-size: 1.1rem; font-weight: 400; margin-bottom: 2rem;">Create a new secure password for your account.</h2>

                    <div style="width: 50px; height: 4px; background-color: #FF6A00; margin-bottom: 2rem;"></div>

                    <form method="post">
                        <div style="margin-bottom: 1.5rem;">
                            <div style="margin-bottom: 1rem;" role="alert">
                                <div asp-validation-summary="ModelOnly" style="color: #FF6A00; font-size: 0.9rem;"></div>
                            </div>
                            <input asp-for="Input.Code" type="hidden" />
                        </div>

                        <div style="margin-bottom: 1.5rem;">
                            <label asp-for="Input.Email" style="display: block; margin-bottom: 0.5rem; color: #555; font-size: 0.9rem; font-weight: 500;">Email</label>
                            <input asp-for="Input.Email" style="width: 100%; padding: 14px 16px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; transition: all 0.3s ease;" autocomplete="username" placeholder="name@example.com" aria-required="true" />
                            <span asp-validation-for="Input.Email" style="color: #FF6A00; font-size: 0.85rem; display: block; margin-top: 0.5rem;"></span>
                        </div>

                        <div style="margin-bottom: 1.5rem;">
                            <label asp-for="Input.Password" style="display: block; margin-bottom: 0.5rem; color: #555; font-size: 0.9rem; font-weight: 500;">Password</label>
                            <input asp-for="Input.Password" style="width: 100%; padding: 14px 16px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; transition: all 0.3s ease;" autocomplete="new-password" placeholder="Create a secure password" aria-required="true" />
                            <span asp-validation-for="Input.Password" style="color: #FF6A00; font-size: 0.85rem; display: block; margin-top: 0.5rem;"></span>
                        </div>

                        <div style="margin-bottom: 2rem;">
                            <label asp-for="Input.ConfirmPassword" style="display: block; margin-bottom: 0.5rem; color: #555; font-size: 0.9rem; font-weight: 500;">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" style="width: 100%; padding: 14px 16px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; transition: all 0.3s ease;" autocomplete="new-password" placeholder="Confirm your password" aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" style="color: #FF6A00; font-size: 0.85rem; display: block; margin-top: 0.5rem;"></span>
                        </div>

                        <button type="submit" style="width: 100%; padding: 14px; background-color: #FF6A00; color: white; border: none; border-radius: 8px; font-weight: 600; font-size: 1rem; cursor: pointer; box-shadow: 0 4px 6px rgba(255, 106, 0, 0.1); transition: all 0.3s ease;">
                            Reset Password
                        </button>
                    </form>

                    <div style="margin-top: 2rem; text-align: center;">
                        <a href="/Identity/Account/Login" style="color: #FF6A00; text-decoration: none; font-weight: 500; font-size: 0.95rem; transition: all 0.3s ease;">Return to login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Focus states for inputs
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('focus', function() {
                this.style.borderColor = '#FF6A00';
                this.style.boxShadow = '0 0 0 3px rgba(255, 106, 0, 0.1)';
                this.style.backgroundColor = 'white';
            });

            input.addEventListener('blur', function() {
                this.style.borderColor = '#ddd';
                this.style.boxShadow = 'none';
                this.style.backgroundColor = '#f9f9f9';
            });
        });

        // Button hover effect
        document.querySelector('button[type="submit"]').addEventListener('mouseenter', function() {
            this.style.backgroundColor = '#e55f00';
            this.style.transform = 'translateY(-2px)';
        });

        document.querySelector('button[type="submit"]').addEventListener('mouseleave', function() {
            this.style.backgroundColor = '#FF6A00';
            this.style.transform = 'translateY(0)';
        });

        // Link hover effect
        document.querySelector('a[href="/Identity/Account/Login"]').addEventListener('mouseenter', function() {
            this.style.color = '#e55f00';
        });

        document.querySelector('a[href="/Identity/Account/Login"]').addEventListener('mouseleave', function() {
            this.style.color = '#FF6A00';
        });
    </script>
}