@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section style="min-height: 100vh; background: url('/images/forgot-password/forgot-pas.webp') no-repeat center center; background-size: cover; font-family: 'Inter', sans-serif; position: relative; overflow: hidden; display: flex; align-items: center; justify-content: center;">

    <!-- ✅ DARK OVERLAY FOR forgot-pas.webp BACKGROUND -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(43, 43, 43, 0.4); z-index: 0;"></div>

    <!-- Background Elements -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1; overflow: hidden;">
        <!-- Marble Background with Overlay -->
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/images/forgot-password/forgot-password-marble.webp'); background-size: cover; background-position: center; opacity: 0.3; filter: saturate(0.7);"></div>
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(43, 43, 43, 0.4);"></div>
        </div>

        <!-- Decorative Elements -->
        <div style="position: absolute; top: -15%; left: 10%; width: 40%; height: 40%; border-radius: 50%; background-color: #FF6A00; opacity: 0.05;"></div>
        <div style="position: absolute; bottom: -10%; right: 20%; width: 30%; height: 30%; border-radius: 50%; background-color: #2B2B2B; opacity: 0.04;"></div>
    </div>

    <!-- Content Container -->
    <div style="position: relative; z-index: 2; width: 90%; max-width: 1000px; display: flex; box-shadow: 0 25px 50px -12px rgba(43, 43, 43, 0.15); border-radius: 12px; overflow: hidden; min-height: 520px;">
        <!-- Left Column - Form -->
        <div style="flex: 1; background-color: white; padding: 3rem; display: flex; flex-direction: column; justify-content: center;">
            <div style="margin-bottom: 2.5rem;">
                <h1 style="font-family: 'Playfair Display', serif; color: #2B2B2B; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">Forgot your password?</h1>
                <p style="color: #666; font-size: 1.1rem; margin-bottom: 1rem;">We'll help you reset your password.</p>
                <div style="width: 50px; height: 4px; background-color: #FF6A00; margin-bottom: 1.5rem;"></div>
                <p style="color: #777; font-size: 0.95rem; line-height: 1.6; margin-bottom: 2rem;">
                    Enter the email address associated with your account, and we'll send you a link to reset your password. For security reasons, we do not store your password, so you can't see it, but you can create a new one.
                </p>
            </div>

            <form method="post" novalidate="novalidate">
                <div style="margin-bottom: 1.5rem;" role="alert"></div>

                <div style="margin-bottom: 2rem;">
                    <label style="display: block; margin-bottom: 0.5rem; color: #555; font-size: 0.9rem; font-weight: 500;" for="Input_Email">Email Address</label>
                    <input style="width: 100%; padding: 14px 16px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; transition: all 0.3s ease;" autocomplete="username" aria-required="true" placeholder="name@example.com" type="email" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="Input_Email" name="Input.Email" value="">
                    <span style="color: #FF6A00; font-size: 0.85rem; display: block; margin-top: 0.5rem;" class="field-validation-valid" data-valmsg-for="Input.Email" data-valmsg-replace="true"></span>
                </div>

                <button type="submit" style="width: 100%; padding: 14px; background-color: #FF6A00; color: white; border: none; border-radius: 8px; font-weight: 600; font-size: 1rem; cursor: pointer; box-shadow: 0 4px 6px rgba(255, 106, 0, 0.1); transition: all 0.3s ease;">
                    Send Reset Link
                </button>
                <input name="__RequestVerificationToken" type="hidden" value="">
            </form>

            <div style="margin-top: 2rem; text-align: center;">
                <a href="/Identity/Account/Login" style="color: rgb(255, 106, 0); text-decoration: none; font-weight: 500; font-size: 0.95rem; transition: 0.3s;">
                    Return to login
                </a>
            </div>
        </div>

        <!-- Right Column - Illustration -->
        <div style="flex: 0.7; background-color: #2B2B2B; position: relative; overflow: hidden; display: flex; flex-direction: column; justify-content: center; align-items: center;">
            <div style="position: absolute; top: 0; right: 0; width: 100%; height: 100%; overflow: hidden;">
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/images/forgot-password/forgot-password-marble.webp'); background-size: cover; background-position: center; filter: brightness(0.7) contrast(1.1);"></div>
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, rgba(43, 43, 43, 0.7) 0%, rgba(43, 43, 43, 0.4) 100%);"></div>
            </div>

            <div style="position: relative; z-index: 2; text-align: center; padding: 0 2rem;">
                <div style="width: 80px; height: 80px; background-color: rgba(255, 106, 0, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#FF6A00" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                </div>
                <h2 style="font-family: 'Playfair Display', serif; color: white; font-size: 1.8rem; margin-bottom: 1rem;">Password Recovery</h2>
                <p style="color: rgba(255, 255, 255, 0.8); font-size: 1rem; line-height: 1.6;">We've all been there. Don't worry, we'll get you back into your account in no time.</p>
                <div style="width: 40px; height: 3px; background-color: #FF6A00; margin: 1.5rem auto;"></div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Focus states for inputs
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('focus', function() {
                this.style.borderColor = '#FF6A00';
                this.style.boxShadow = '0 0 0 3px rgba(255, 106, 0, 0.1)';
                this.style.backgroundColor = 'white';
            });

            input.addEventListener('blur', function() {
                this.style.borderColor = '#ddd';
                this.style.boxShadow = 'none';
                this.style.backgroundColor = '#f9f9f9';
            });
        });

        // Button hover effect
        document.querySelector('button[type="submit"]').addEventListener('mouseenter', function() {
            this.style.backgroundColor = '#e55f00';
            this.style.transform = 'translateY(-2px)';
        });

        document.querySelector('button[type="submit"]').addEventListener('mouseleave', function() {
            this.style.backgroundColor = '#FF6A00';
            this.style.transform = 'translateY(0)';
        });

        // Link hover effect
        document.querySelector('a[href="/Identity/Account/Login"]').addEventListener('mouseenter', function() {
            this.style.color = '#e55f00';
        });

        document.querySelector('a[href="/Identity/Account/Login"]').addEventListener('mouseleave', function() {
            this.style.color = '#FF6A00';
        });
    </script>
}